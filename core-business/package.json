{
  "name": "core-business",
  "version": "0.0.1",
  "description": "",
  "author": "Tony Westerich",
  "private": true,
  "license": "ISC",
  "scripts": {
    "build": "nest build",
    "format": "prettier --check 'src/**/*.ts' 'test/**/*.ts' './*.{js,json}'",
    "format:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts' './*.{js,json}'",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts'",
    "lint:fix": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "npm run test:type && npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config ./test/jest.unit.ts",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:e2e": "jest --runInBand --config ./test/jest.e2e.ts",
    "test:e2e:watch": "npm run test:e2e -- --watch",
    "test:integration": "jest --runInBand --config ./test/jest.integration.ts",
    "test:integration:watch": "npm run test:integration -- --watch",
    "test:type": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:setup": "npm run db:migrate",
    "db:migrate": "prisma db push",
    "db:setup:test": "npm run db:migrate:test",
    "db:migrate:test": "dotenv -e .env.test -- prisma db push"
  },
  "engines": {
    "node": ">=20.12.2",
    "npm": ">=10.5.0",
    "yarn": "please-use-npm"
  },
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "@nestjs/apollo": "^12.1.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.12.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "eslint-plugin-no-relative-import-paths": "^1.5.3",
    "graphql": "^16.8.1",
    "http-status-codes": "^2.3.0",
    "module-alias": "^2.2.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prisma": "^5.12.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "schema": "database/schema.prisma"
  }
}
